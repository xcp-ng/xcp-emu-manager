(jbuild_version 1)

(rule
 ((targets (version.ml))
  (deps    (../VERSION))
  (action  (with-stdout-to ${@} (bash "cat ${<} | sed s/^/\"let version = \"\\\"/ | sed s/$/\\\"/")))
 )
)

(executables
 ((names (emu_manager))
  (flags (:standard -safe-string))
  (libraries (ezjsonm fd-send-recv qmp xapi-idl)
  )
 )
)

(install
 ((section bin)
  (files ((emu_manager.exe as emu-manager)))
 )
)
